<div class="row">
  <div class="form-group form-inline col">
    <%= f.label :ab_info, "AB情報" %>
    <%= f.text_field :ab_info, value: @form.ab_info, class: "form-control form-control-sm" %>
    <input type="button" value="確認" >
  </div>

  <div class="form-group form-inline col">
    <%= f.label :bl_info, "BL情報" %>
    <%= f.text_field :bl_info, value: @form.bl_info, class: "form-control form-control-sm" %>
    <input type="button" value="確認" >
  </div>

  <div class="form-group form-inline col">
    <%= f.label :exam_info, "審査結果情報" %>
    <%= f.text_field :exam_info, value: @form.exam_info, class: "form-control form-control-sm" %>
    <input type="button" value="確認" >
  </div>

  <div class="form-group form-inline col">
    <%= f.label :guarantee_info, "保証開始情報" %>
    <%= f.text_field :guarantee_info, value: @form.guarantee_info, class: "form-control form-control-sm" %>
    <input type="button" value="確認" >
  </div>
</div>

<div class="row">
  <div class="form-group form-inline col">
    <%= f.label :tsr_score, "TSR点数" %>
    <%= f.text_field :tsr_score, value: @form.tsr_score, class: "form-control form-control-sm" %>
  </div>

  <div class="form-group form-inline col">
    <%= f.label :tdb_score, "帝国点数" %>
    <%= f.text_field :tdb_score, value: @form.tdb_score, class: "form-control form-control-sm" %>
  </div>

  <div class="form-group form-inline col" >
    <%= f.label :anti_social, "反社情報" %>
    <%= f.radio_button :anti_social, true, checked: @form.anti_social %>
    <%= f.label :anti_social, "あり" %>
    <%= f.radio_button :anti_social, false, checked: @form.anti_social == false %>
    <%= f.label :anti_social, "なし" %>
  </div>

  <div class="form-group col">
    <%= f.label :anti_social_memo, "反社メモ" %>
    <%= f.text_field :anti_social_memo, value: @form.anti_social_memo, class: "form-control form-control-sm" %>
  </div>
</div>

<div class="row">
  <div class="form-group col">
    <%= f.label :reject_reason, "否決理由" %>
    <%= f.text_field :reject_reason, value: @form.reject_reason, class: "form-control form-control-sm" %>
  </div>
  <div class="form-group col">
    <%= f.label :communicate_memo, "社内連絡メモ" %>
    <%= f.text_field :communicate_memo, value: @form.communicate_memo, class: "form-control form-control-sm" %>
  </div>
</div>
