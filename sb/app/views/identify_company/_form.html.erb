<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with url:identify_company_create_entity_path, remote: true do |f| %>
    <%= f.hidden_field :classification, value: @identify_company.classification %>
    <%= f.hidden_field :id, value: @identify_company.id %>
    <div id="error_explanation">
     <% if @identify_company.errors.any? %>
        <ul>
          <% @identify_company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>    
    </div>
     <div class="modal-header">
      <h2 class="modal-title">企業作成</h2>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form-group field">
        <%= f.label "法人名" , class: "form-control-label"%>
        <%= f.text_field :company_name, value: @identify_company.company_name, class: "form-control", required: true %>
        <%= f.label "代表者名" , class: "form-control-label"%>
        <%= f.text_field :daihyo_name, value: @identify_company.daihyo_name, class: "form-control", required: true %>
        <%= f.label "法人番号" , class: "form-control-label"%>
        <%= f.text_field :taxagency_corporate_number, value: @identify_company.taxagency_corporate_number, class: "form-control" %>
        <%= f.label "郵便番号" , class: "form-control-label"%>
        <%= f.text_field :zip_code, value: @identify_company.zip_code, class: "form-control" %>
        <%= f.label :prefecture_code_eq, "都道府県", class: "col-form-label col-form-label-sm" %>
        <div>
          <%= f.collection_select :prefecture_code, Prefecture.all, :id, :name, { include_blank: "-- 選択してください --", selected: @identify_company.prefecture_code }, { class: "custom-select", required: true } %>
        </div>
        <%= f.label "住所" , class: "form-control-label"%>
        <%= f.text_field :address, value: @identify_company.address, class: "form-control", required: true  %>
        <%= f.label "代表電話番号" , class: "form-control-label"%>
        <%= f.text_field :daihyo_tel, class: "form-control" %>
        <%= f.label "設立" , class: "form-control-label"%>
        <%= f.text_field :established, value: @identify_company.established, class: "form-control" %>
      </div>
    </div>
    <div class="modal-footer actions">
      <%= f.submit "作成", class: "btn btn-primary", data: { confirm: '企業作成しますか？' } %>
    </div>
    <% end %>
  </div>
</div>