<div class="input-group">
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="<%= name %>" name="<%= name %>">
        <label class="custom-file-label" for="<%= name %>" data-browse="参照">ファイルを選択(ここにドロップすることもできます)</label>
    </div>
    <div class="input-group-append">
        <button type="button" class="btn btn-outline-secondary input-group-text" id="<%= name %>Reset">取消</button>
    </div>
</div>

<% unless @is_initialized_bs_custom_file_input %>
<% # 二重で読み込まない制御 %>
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
<script>
    jQuery(document).on('turbolinks:load', function(){
            bsCustomFileInput.init();
    });
</script>
<% @is_initialized_bs_custom_file_input = true; end %>

<script>
    jQuery(document).on('turbolinks:load', function(){
        document.getElementById('<%= name %>Reset').addEventListener('click', function() {
            var elem = document.getElementById('<%= name %>');
            elem.value = '';
            elem.dispatchEvent(new Event('change'));
        });
    });
</script>
